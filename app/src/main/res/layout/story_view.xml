<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="#4E666E"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"/>

    </LinearLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="75dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginBottom="20dp">

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
             <View
                 android:id="@+id/sentinel"
                 android:layout_width="match_parent"
                 android:layout_height="150dp"/>

             <TextView
                 android:layout_below="@id/sentinel"
                 android:id="@+id/title"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:text="TO BUILD A FIRE"
                 android:textAlignment="center"
                 android:textStyle="bold"
                 android:textSize="17dp"/>
             
             <TextView
                 android:id="@+id/author"
                 android:layout_width="match_parent"
                 android:layout_height="20dp"
                 android:layout_below="@id/title"
                 android:text="Jack London"
                 android:textStyle="italic"
                 android:textAlignment="center" />

                 <TextView
                     android:id="@+id/summary"
                     android:layout_width="match_parent"
                     android:layout_height="160dp"
                     android:layout_below="@+id/author"
                     android:paddingLeft="20dp"
                     android:paddingRight="20dp"
                     android:text="To Build a Fire is a prime example of the literary movement of naturalism. Naturalism was an offshoot of Charles Darwin's and Herbert Spencer's theories on evolution."/>


                 <Button
                     android:layout_below="@+id/summary"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                     android:layout_marginRight="20dp"
                     android:layout_marginBottom="15dp"
                     android:text="START READING"
                     android:textColor="#ffffff"
                     android:background="#4E666E"/>
             </RelativeLayout>
         </android.support.v7.widget.CardView>

     </RelativeLayout>

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="105dp"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    
</RelativeLayout>